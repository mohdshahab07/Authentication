<%- include('partials/header') %>



  <div class="container-sm mt-5 loutdiv">


    <div class="container-sm loginoutdiv">

      <% if (message.error) { %>
        <div class="alert alert-warning" role="alert">
          <%= message.error %>
        </div>
        <br>
        <% } %>
          <div class="card logincard">

            <h1 class="lhead">Register</h1>
            <div class="card-body">
              <form action="/register" method="POST">
                <div class="mb-3">
                  <label for="text" class="">Full Name</label>
                  <div class="col-sm-10 lem">
                    <input type="text" class="form-control" id="inputText3" name="realname" required>
                  </div>
                </div>
                <div class="mb-3">
                  <label for="email" class="">Email</label>
                  <div class="col-sm-10 lem">
                    <input type="email" class="form-control" id="inputEmail3" name="username" required>
                  </div>
                </div>
                <div class="mb-3">
                  <label for="password" class="">Password</label>
                  <div class="col-sm-10 lem">
                    <input type="password" class="form-control" id="inputPassword3" name="password" minlength="4"
                      required>
                  </div>
                </div>


                <button type="submit" class="btn btn-secondary">Register</button>
              </form>

            </div>

          </div>



    </div>


  </div>

  <%- include('partials/header') %>